.container
  %h2= @board.title
- @tasks.each do |task|
  = link_to board_task_path(board_id: @board.id, id: task.id) do
    .task
      - if task.eyecatch.attached?
        .task_image
          = image_tag task.eyecatch
      %h1.task_title= task.title
      .task_content
        %p= task.content
      .task_detail
        = image_tag @board.user.avatar_image
      .task_heart
        = image_tag 'message-square-outline.svg'
.container
  = link_to new_board_task_path(@board) do
    .float_btn
      %i.fa.fa-plus  Add new card
